{
    "compilerOptions": {
        "baseUrl": ".",
        "allowJs": false, // weird behaviour
        "checkJs": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "pretty": true,
        "alwaysStrict": false,
        "strict": false,
        "noImplicitAny": false,
        "resolveJsonModule": true,
        "plugins": [
            {
                "name": "typescript-deno-plugin"
            }
        ],
        "target": "esnext",
    }
}